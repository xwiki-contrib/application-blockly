{{html  clean="false"}}
&lt;p&gt;
  &lt;button id="show"&gt;Show JavaScript&lt;/button&gt;
  &lt;button id="run"&gt;Run JavaScript&lt;/button&gt;
&lt;/p&gt;
&lt;form id="edit" method="post" action="$xwiki.getURL("$refParam","preview")" class="withLock form"&gt;
  &lt;table&gt;
    &lt;tr&gt;
      &lt;td&gt;
        &lt;div id="blocklyDiv" style="height: 480px; width: 500px; display:inline-block"&gt;&lt;/div&gt;
      &lt;/td&gt;
      &lt;td&gt;
        &lt;textarea cols="60" rows="23" id="content" name="content"&gt;$document.getContent()&lt;/textarea&gt;
      &lt;/td&gt;
    &lt;/tr&gt;
  &lt;/table&gt;


  &lt;xml id="toolbox" style="display: none"&gt;
    &lt;category name="Logic"&gt;
      &lt;block type="controls_if"&gt;&lt;/block&gt;
      &lt;block type="logic_compare"&gt;&lt;/block&gt;
      &lt;block type="logic_operation"&gt;&lt;/block&gt;
      &lt;block type="logic_negate"&gt;&lt;/block&gt;
      &lt;block type="logic_boolean"&gt;&lt;/block&gt;
    &lt;/category&gt;
    &lt;category name="Loops"&gt;
      &lt;block type="controls_repeat_ext"&gt;
        &lt;value name="TIMES"&gt;
          &lt;block type="math_number"&gt;
            &lt;field name="NUM"&gt;10&lt;/field&gt;
          &lt;/block&gt;
        &lt;/value&gt;
      &lt;/block&gt;
      &lt;block type="controls_whileUntil"&gt;&lt;/block&gt;
    &lt;/category&gt;
    &lt;category name="Math"&gt;
      &lt;block type="math_number"&gt;
        &lt;field name="NUM"&gt;123&lt;/field&gt;
      &lt;/block&gt;
      &lt;block type="math_arithmetic"&gt;&lt;/block&gt;
      &lt;block type="math_single"&gt;&lt;/block&gt;
    &lt;/category&gt;
    &lt;category name="Text"&gt;
      &lt;block type="text"&gt;&lt;/block&gt;
      &lt;block type="text_length"&gt;&lt;/block&gt;
      &lt;block type="text_print"&gt;&lt;/block&gt;
    &lt;/category&gt;
  &lt;/xml&gt;

  &lt;div class="hidden"&gt;
      &lt;input type="hidden" name="form_token" value="$!{services.csrf.getToken()}" /&gt;
      &lt;input type="hidden" name="x-maximized" value="$!{escapetool.xml($request.get('x-maximized'))}"/&gt;
      &lt;input type="hidden" name="xcontinue" value="$xcontinue"/&gt;
      &lt;input type="hidden" name="comment" value="$!{escapetool.xml($request.comment)}"/&gt;
      &lt;input type="hidden" name="language" value="$!tdoc.realLocale" /&gt;    
      &lt;input type="hidden" name="xeditaction" value="$!xcontext.action" /&gt;
  &lt;/div&gt;

  #template('editactions.vm')
&lt;/form&gt;
{{/html}}
